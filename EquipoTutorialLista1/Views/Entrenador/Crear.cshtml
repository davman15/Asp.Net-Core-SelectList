@model EquipoTutorialLista1.Models.Entrenador
@{
    ViewData["Title"] = "Crear";
}

<h1 class="text-center">Crear Entrenador</h1>
<div class="row">
    <div class="col-8 offset-2">
        <form asp-action="Crear">
            <div class="form-group mb-3">
                <label class="form-label">Nombre Entrenador</label>
                <input asp-for="EntrenadorNombre" class="form-control" />
            </div>
            <div class="form-group text-center my-3">
                <input type="submit" value="Crear Entrenador" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Volver a la Lista</a>
</div>
